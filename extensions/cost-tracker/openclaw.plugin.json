{
  "id": "cost-tracker",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean"
      },
      "telemetryPath": {
        "type": "string",
        "description": "Path to telemetry JSONL directory"
      },
      "outputPath": {
        "type": "string",
        "description": "Path for daily cost summary JSONL output"
      },
      "budget": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "dailyLimit": {
            "type": "number"
          },
          "weeklyLimit": {
            "type": "number"
          },
          "agentDailyLimit": {
            "type": "number"
          },
          "enabled": {
            "type": "boolean"
          }
        },
        "required": ["dailyLimit"]
      },
      "slackWebhookUrl": {
        "type": "string",
        "description": "Slack webhook URL for budget alerts"
      }
    },
    "required": ["telemetryPath"]
  },
  "uiHints": {
    "enabled": {
      "label": "Enable Cost Tracker"
    },
    "telemetryPath": {
      "label": "Telemetry Path",
      "placeholder": "~/.openclaw/telemetry"
    },
    "outputPath": {
      "label": "Output Path",
      "placeholder": "~/.openclaw/cost-summaries",
      "advanced": true
    },
    "slackWebhookUrl": {
      "label": "Slack Webhook URL",
      "placeholder": "https://hooks.slack.com/services/...",
      "sensitive": true,
      "advanced": true
    }
  }
}
